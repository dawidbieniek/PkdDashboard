@inherits LayoutComponentBase

<AppThemeProvider @rendermode="InteractiveServer" />
<MudPopoverProvider @rendermode="InteractiveServer" />

<MudLayout Style="height: 100vh">
    <MudAppBar>
        <TopBar />
    </MudAppBar>
    <MudDrawer Open="true">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="h-100">
        <div class="pa-4 h-100">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

<MudAlert Severity="Severity.Error" CloseIcon="@Icons.Material.Filled.Close" id="blazor-error-ui" data-nosnippet>
    <MudStack Row>
        <MudText Typo="Typo.h6">An unhandled error has occurred.</MudText>
        <MudLink Href="." Class="reload">Reload</MudLink>
    </MudStack>
</MudAlert>
