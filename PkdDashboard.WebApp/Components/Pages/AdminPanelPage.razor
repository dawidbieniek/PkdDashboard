@page "/admin"
@using PkdDashboard.Global
@using PkdDashboard.WebApp.Jobs

@rendermode InteractiveServer

@inject HangfireService HangfireService

<MudStack>
    <JobControlRow Name="@nameof(IQueryCompanyCountsJob)"
                   UpdateStatus="HangfireService.IsJobScheduled"
                   OnStart="HangfireService.EnableJobPeriodicRun"
                   OnStop="HangfireService.DisableJobPeriodicRun"
                   OnForce="HangfireService.RunJob" />

    <MudPaper Elevation="2">
        <iframe src="/hangfire" style="height:600px" />
    </MudPaper>
</MudStack>